{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 500,
  "height": 200,
  "padding": 5,

  "data": [
    {
      "name": "table",
      "$dataValues": ""
    }
  ],

 "scales": [
    {
      "name": "yscale",
      "type": "band",
      "domain": {"data": "table", "field": "y"},
      "range": "height",
      "padding": 0.2
    },
    {
      "name": "xscale",
      "type": "linear",
      "domain": {"data": "table", "field": "x"},
      "range": "width",
      "round": true,
      "zero": true,
      "nice": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "$colorRange": [],
      "domain": {"data": "table", "field": "c"}
    }
  ],

  "axes": [
    { "orient": "bottom", "scale": "xscale" },
    { "orient": "left", "scale": "yscale" }
  ],

  "marks": [
    {
      "type": "group",

      "from": {
        "facet": {
          "data": "table",
          "name": "facet",
          "groupby": "y"
        }
      },

      "encode": {
        "enter": {
          "y": {"scale": "yscale", "field": "y"}
        }
      },

      "signals": [
        {"name": "height", "update": "bandwidth('yscale')"}
      ],

      "scales": [
        {
          "name": "pos",
          "type": "band",
          "range": "height",
          "domain": {"data": "facet", "field": "c"}
        }
      ],

      "marks": [
        {
          "name": "bars",
          "from": {"data": "facet"},
          "type": "rect",
          "encode": {
            "enter": {
              "y": {"scale": "pos", "field": "y"},
              "height": {"scale": "pos", "band": 1},
              "x": {"scale": "xscale", "field": "x"},
              "x2": {"scale": "xscale", "x": 0},
              "fill": {"scale": "color", "field": "c"}
            }
          }
        }
      ]
    }
  ]
}